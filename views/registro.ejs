<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>

<body class="cuerpo">
    <%- include('partials/header')%>
   
    <div class="contenedor">
        <div class="form-registro">
            <form id="form" class="sesion-registro" action="" enctype="multipart/form-data">
                <h1 class="registro h1 mt-2">Registro</h1>
                <input id="name" class="form-control mt-5 form-datos" name="name" type="text" placeholder="Nombre">
                <span class="error" id="nameError"></span>
                <input id="lastname" class="form-control mt-5 form-datos" name="last name" type="text" placeholder="Apellido">
                <span id="lastNameError"></span>
                <input id="email" class="form-control mt-5 form-datos" name="email" type="email" placeholder="Email">
                <span id="emailError"></span>
                <input id="password" class="form-control mt-5 form-datos" name="password" type="password" placeholder="Contraseña">
                <span id="passwordError"></span>
                <input id="password2" class="form-control mt-5 form-datos" name="password2" type="password" placeholder="Repetir Contraseña">
                <span id="passwordError2"></span>
                <input id="date" class="form-control mt-5 form-datos" name="date" type="date">
                <span id="dateError"></span>
                <div class="mt-5">
                    <div class="img-container" id="img-preview"></div>
                    <input class="form-control photo-box mt-3" type="file" id="formFile">
                    <span id="fileErrors"></span>
                </div>
                <div class="form-check mt-5">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                      Acepto los términos y condiciones
                    </label>
                    <div id="termsErrors"></div>
                </div>
                <div>
                    <button class="btn btn-registro hvr-box-shadow-outset" type="submit">Send</button>
                </div>
            </form>
        </div>
    </div>


    

    <%- include('partials/footer') %>
    <script src="/javascripts/registro.js"></script>
    <script src="http://momentjs.com/downloads/moment.min.js"></script>
</body>
</html>