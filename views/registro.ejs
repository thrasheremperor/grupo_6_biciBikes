                <span id="dateError"><%= (typeof errores != 'undefined' && errores.date)? errores.date.msg: "" %> </span>
                
                <button class="btn btn-primary" type="submit">Send</button>
            </form>
        </div>
    </div>


    

    <%- include('partials/footer') %>
    <script src="/javascripts/registro.js"></script>

</body>
</html>