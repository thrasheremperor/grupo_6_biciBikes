<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>


  <body>
    <%- include('partials/header')%>

      <main>
        <section class="banner py-4">
          <h1>Â¡Bienvenidos a BiciBikes!</h1>
        </section>

        <!--ULTIMOS VISTOS-->
       <div class="container">
         <div class="row">
           <div class="col-12">
             <h2 class="products-title">Ultimos vistos</h2>
             <!-- <hr size="3"> -->
           </div>
           <% productsVisited.forEach(producto => { %>
            <div class="col-12 col-md-4">
              <section class="product-box">
                <a href="/productos/detalle/<%- producto.id %>/<%- producto.category %>">
                  <figure class="product-box_image">
                    <img src="/images/<%- producto.img %> " alt="bicicleta" class="img-fluid">
                  </figure>
                  <article class="product-box_data">
                    <h6><%- producto.name %> </h6>
                    <h6><%- producto.marca %> </h6>
                    <span>$<%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                    <% if (producto.descuento != 0) { %>
                      <span><%- producto.descuento %>% OFF </span>
                    <% } %>
                    <i class="fas fa-truck"></i>
                  </article>
                </a>
              </section>
            </div>
          <% }) %>          
          </div>
        </div>


        <!--AHORRA YA-->
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Ahorra ya</h2>
              <!-- <hr size="3"> -->
            </div>
            <% productsNow.forEach(producto => { %>
              <div class="col-12 col-md-6">
                <section class="product-box">
                  <a href="/productos/detalle/<%- producto.id %>/<%- producto.category %>">
                    <figure class="product-box_image">
                      <img src="/images/<%- producto.img %> " alt="bicicleta" class="img-fluid">
                    </figure>
                    <article class="product-box_data">
                      <h6><%- producto.name %> </h6>
                      <h6><%- producto.marca %> </h6>
                      <span>$<%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                      <% if (producto.descuento != 0) { %>
                        <span><%- producto.descuento %>% OFF </span>
                      <% } %>
                      <i class="fas fa-truck"></i>
                    </article>
                  </a>
                </section>
              </div>
            <% }) %>    
          </div>
        </div>


        <!--POPULARES-->
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Populares</h2>
              <!-- <hr size="3"> -->
            </div>
            <% productsPopular.forEach(producto => { %>
              <div class="col-12 col-md-4">
                <section class="product-box">
                  <a href="/productos/detalle/<%- producto.id %>/<%- producto.category %>">
                    <figure class="product-box_image">
                      <img src="/images/<%- producto.img %> " alt="bicicleta" class="img-fluid">
                    </figure>
                    <article class="product-box_data">
                      <h6><%- producto.name %> </h6>
                      <h6><%- producto.marca %> </h6>
                      <span>$<%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                      <% if (producto.descuento != 0) { %>
                        <span><%- producto.descuento %>% OFF </span>
                      <% } %>
                     
                      <i class="fas fa-truck"></i>
                    </article>
                  </a>
                </section>
              </div>
            <% }) %>    
          </div>
        </div>



        <div class="d-flex mt-4 mr-2">
          <button type="button" id="button" class="srch-btn btn"><a href="/full" id="home-lower-button">Ver mas!</a></button>
        </div>
      </main>
      <%- include('partials/footer') %>

  </body>
  </html>