<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>

  <body>
    <%- include('partials/header')%>

      <main>
        <section class="banner py-3">
          <h1>Â¡Bienvenidos a BiciBikes!</h1>
          <div class="d-flex justify-content-end mt-4 mr-2 mb-10">
            <button type="button" class="btn btn-warning ml-5"><a href="/full">Todos los productos</a></button>
          </div>
        </section>

        <!--ULTIMOS VISTOS-->
       <div class="container products-wrapper">
         <div class="row">
           <div class="col-12">
             <h2 class="products-title">Ultimos vistos</h2>
             <hr size="3">
           </div>    
           <% productsVisited.forEach(producto => { %>
              <div class="a col-11 col-md-6 col-lg-3">
                <section class="product-box">
                  <a href="/productos/detalle/<%-producto.id%>/<%-producto.category%>">
                   <img src="/images/<%-producto.img%>" alt="bicicleta" class="img-fluid">
                  </a>
                  <div class="detalle">
                    <p><%-producto.name + ' ' + producto.marca%></p>
                  </div>
                  <article>
                    <h3>$<%- producto.precio%></h3>
                    <span>Envio<%-' ' + producto.envio%></span>
                    <i class="fas fa-trunk"></i>
                  </article>

                </section>
              </div>
             
            <% }) %>
            
          </div>
        </div>


        <!--AHORRA YA-->
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Ahorra ya</h2>
              <hr size="3">
            </div>

            <% productsNow.forEach(producto => { %>
              <div class="a col-11 col-md-6 col-lg-3">
                <section class="product-box">
                  <a href="/productos/detalle/<%-producto.id%>/<%-producto.category%>">
                    <img src="/images/<%-producto.img%>" alt="bicicleta" class="img-fluid">
                  </a>
                  <div class="detalle">
                    <p><%-producto.name + ' ' + producto.marca%></p>
                  </div>
                  <article>
                    <h3>$<%-producto.precio%></h3>
                    <span><%-producto.descuento%>% OFF</span>
                    <i class="fas fa-trunk"></i>
                  </article>

                </section>
              </div>
             
            <% }) %>

          </div>
        </div>


        <!--POPULARES-->
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Populares</h2>
              <hr size="3">
            </div>

            <% productsPopular.forEach(producto => { %>
              <div class="a col-11 col-md-6 col-lg-3">
                <section class="product-box">
                  <a href="/productos/detalle/<%-producto.id%>/<%-producto.category%>">
                    <img src="/images/<%-producto.img%>" alt="bicicleta" class="img-fluid">
                  </a>
                  <div class="detalle">
                    <p><%-producto.name + ' ' + producto.marca%></p>
                  </div>
                  <article>
                    <h3>$<%-producto.precio%></h3>
                    <span><%-producto.envio%></span>
                    <i class="fas fa-trunk"></i>
                  </article>
                </section>
              </div>
             
            <% }) %>

          </div>
        </div>



        <div class="d-flex justify-content-end mt-4 mr-2">
          <button type="button" class="btn btn-warning"><a href="/full">Todos los productos</a></button>
        </div>
      </main>
      <%- include('partials/footer') %>

  </body>
  </html>