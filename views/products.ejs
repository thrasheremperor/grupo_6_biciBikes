<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>

  <body>
    <%- include('partials/header')%>

      <main>
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Todos los productos:</h2>
            </div>

            <% forEach(producto => { %>
              <div class="a col-11 col-md-6 col-lg-3">
                <section class="product-box">
                  <a href="/products/detalle/<%-producto.id%>">
                   <img src="/images/<%-producto.img%>" alt="bicicleta" class="img-fluid">
                  </a>
                  <article>
                    <h3>$<%- producto.precio%></h3>
                    <span>Envio<%-producto.envio%></span>
                    <i class="fas fa-trunk"></i>
                  </article>
                  <div class="detalle">
                    <p><%-producto.name + ' ' + producto.marca%></p>
                  </div>
                </section>
              </div>
             
            <% }) %>
          </div>
        </div>

      <%- include('partials/footer') %>

  </body>
  </html>