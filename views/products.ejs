<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>
      <main>
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Todos los productos</h2>
            </div>
            <% producto.forEach(producto => { %>
              <div class="col-12 col-md-4">
                <section class="product-box hvr-bounce-in">
                  <a href="/productos/detalle/<%- producto.id %>"></a>
                    <figure class="product-box_image">
                      <img src="/images/imgProduct/<%- producto.product[0].image %> %> " alt="bicicleta" class="img-fluid">
                    </figure>
                    <article class="product-box_data">
                      <h6><%- producto.name %> </h6>
                      <h6><%- producto.producto_make.make %> </h6>
                      <span>$<%- (producto.price - producto.price * producto.product_discount.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                      <% if (producto.product_discount.discount != 0) { %>
                        <span><%- producto.product_discount.discount %>% OFF </span>
                      <% } %>
                      <i class="fas fa-truck"></i>
                    </article>
                  </a>
                </section>
              </div>
            <% }) %>  
          </div>
        </div>
      </main>
      <%- include('partials/footer') %>
  </body>
  </html>