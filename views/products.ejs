<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>
      <main>
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Todos los productos</h2>
            </div>
            <% productos.forEach(producto => { %>
              <div class="col-12 col-md-4">
                <section class="product-box hvr-bounce-in">
                  <a href="/productos/detalle/<%- producto.id %>">
                    <figure class="product-box_image">
                      <img src="/images/imgProduct/<%- producto.images[0].image %>" alt="bicicleta" class="img-fluid">
                    </figure>
                    <article class="product-box_data p-3">
                      <h3><%- producto.name %> </h3>
                      <% if (producto.discount == 0) { %>
                      <span class="text-success h4">$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                      <% } else { %>
                       
                        <span><strike>$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></strike> </span>
                        <span class="text-success h1">$<%- (producto.price - producto.price * producto.product_discount.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                        <span class="h3" ><%- producto.product_discount.discount %>% OFF </span>
                      <% } %>
                      <i class="fas fa-truck"></i>
                    </article>
                  </a>
                </section>
              </div>
            <% }) %>  
          </div>
        </div>
      </main>
      <%- include('partials/footer') %>
  </body>
  </html>