<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>
      <main>
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title"><%= title %></h2>
            </div>
            <% productos.forEach(producto => { %>
              <div class="col-12 col-md-3 my-2">
                <div class="card" style="height: 400px;"> <!--El div de las col no se toca, para modificar el estilo de la caja, hacerlo desde acÃ¡-->
                  <a href="/productos/detalle/<%- producto.id %>">
                  <img src="/images/imgProduct/<%- producto.images[0].image %>" class="card-img-fluid" alt="bicicleta"  style="object-fit: cover;">
                </a>
                  <div class="card-body">
                    <h5 class="card-title"><%- producto.name %> </h5>
                    <article class="product-box_data p-3">
                      <% if (producto.discount == 0) { %>
                      <span class="text-success h4">$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                      <% } else { %>
                       
                        <span><strike>$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></strike> </span>
                        <span class="text-success h1">$<%- (producto.price - producto.price * producto.product_discount.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                        <span class="h3" ><%- producto.product_discount.discount %>% OFF </span>
                      <% } %>
                      <i class="fas fa-truck"></i>
                    </article>
                  </div>
                </div>
               
              </div>
            <% }) %>  
          </div>
        </div>
      </main>
      <%- include('partials/footer') %>
  </body>
  </html>