<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/3f21023fe6.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/stylesheets/styles.css">
    </head>
    <body class="cuerpo">
        <%- include('partials/header')%>
       
        <div class="contenedor">
            
            <div class="row">
            <div class="register-wrapper">
                <div class="register-form">
                    
                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="pic">
                            <img src="/public/images/users/Naruto.jpg">
                        </div>
                        <div>
                            <!--ESPACIO PARA QUE SE ACOMODEN LAS COSAS-->
                        </div>
                        <p>
                            <label>Nombre</label>
                            <input type="text" name="nombre">
                        </p>
                        <p>
                            <label>Apellido</label>
                            <input type="text" name="apellido">
                        </p>
                        <p>
                            <label>Email</label>
                           
                            <input type="email" name="email" value="<%= (typeof old != 'undefined' && old.nombre) ? old.nombre : ""%>">
                        </p>
                        <p>
                           
                            <label>Contrase√±a</label>
                            <input type="password" name="pass">
                        </p>
    
                        <p>                        
                        <button class="block mt-3" type="submit">
                            Cerrar sesion
                        </button>   
                        </p>                                 
                    </form> 
                    
                </div>
    
            </div>    
        </div>
        </div>
    
    
        
    
        <%- include('partials/footer') %>
    </body>
</html>