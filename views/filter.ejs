<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>
      <main>
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Los productos de la categoria : <%= categoria %></h2>
            </div>
            <% productos.forEach(producto => { %>
              <div class="col-12 col-md-4">
                <section class="product-box hvr-bounce-in">
                  <a href="/productos/detalle/<%- producto.id %>">
                    <figure class="product-box_image">
                      <img src="/images/imgProduct/<%- producto.images[0].image %>" alt="bicicleta" class="img-fluid">
                    </figure>
                    <article class="product-box_data p-3">
                      <h3><%- producto.name %> </h3>
                      
                      <i class="fas fa-truck"></i>
                    </article>
                  </a>
                </section>
              </div>
            <% }) %>  
          </div>
        </div>
      </main>
      <%- include('partials/footer') %>
  </body>
  </html>