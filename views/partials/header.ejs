 <div class="modal" tabindex="-1" id="modal-carrito">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Mi carrito</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="lista-carrito">
        <div class="table-responsive">
          <table class="table">
            <thead id="cart-head">
              <tr>
                <th colspan="3">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">SubTotal</th>
              </tr>
            </thead>
              <tbody>
                <span id="cart-empty" class="text-danger">El carrito no tiene productos agregados</span>
              </tbody>
              <tfoot id="cart-footer">
                <tr>
                  <th colspan="4"  class="text-end" id="totaltitle">TOTAL:</th>
                  <th >
                    <h5 id="total"></h5>
                  </th>
                </tr>
              </tfoot>
            </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" id="btn-delete-cart">Vaciar carrito</button>
        <a href="/compra" class="btn btn-sm btn-primary" id="btn-next-buy">Finalizar compra</a>
      </div>
    </div>
  </div>
</div> 

