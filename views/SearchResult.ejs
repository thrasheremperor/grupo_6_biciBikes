<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')%>
  <body>
      <%- include('partials/header')%>
          <h2 class="products-title">Resultado de busqueda</h2>
            <ul>
                <gi% productos.forEach(producto => { %>
                  <li><a href="/productos/detalle/<%= producto.id %>"><%= producto.name %></a></li>
                <% }) %>

                     <% if (productos.length == 0) { %>
                       <p> No hay resultados </p>
                      <% } %>
                 </ul>
                  
                    <figure class="product-box_image">
                      <img src="/images/imgProduct/<%- producto.product[0].image %> " alt="bicicleta" class="img-fluid">
                    </figure>
                    <article class="product-box_data">
                      <h6><%- producto.name %> </h6>
                      <h6><%- producto.marca %> </h6>
                      <span>$<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,".") %></span>
                      <% if (producto.discount != 0) { %>
                        <span><%- producto.discount %>% OFF </span>
                      <% } %>
                      <i class="fas fa-truck"></i>
                    </article>
                  
                
              
              
      <%- include('partials/footer') %>
  </body>
  </html>