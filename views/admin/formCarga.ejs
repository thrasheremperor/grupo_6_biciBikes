<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs')%>
<body class="cuerpo">
  <%- include('../partials/header.ejs') %> 
    <div class="formCarga">
      <form action="/admin/formCarga" method="POST" id ="formCarga" class="sesion-registro" enctype="multipart/form-data">
        <h2>Agregar nuevo Producto</h2>
        <hr>
        <div class="row">
          <div class="col-10">
            
            <input type="text" name="name" placeholder="Nombre del producto" id="inputname" class="form-control mt-5 form-datos">
            
            <span  id="nameError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.name ? errores.name.msg: null ) %></span>
           
          </div>
        </div>
        <div class="row">
          <div class="col-10">
            <select name="make"  id="">
              <option selected hidden >Seleccione marca</option>
              <% marcas.forEach(marcas => { %>
               <option value="<%= marcas.id %>"><%= marcas.make %></option>
              <% }) %>
            </select>
           
            <span id="makeError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.make ? errores.make.msg: null ) %></span>
          </div>
        </div>
        
        <div class="row">
          <div class="col-10">
            
            <input type="number" id="price" name="price" class="form-control mt-5 form-datos" placeholder="Precio de producto">
          
            <span id="priceError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.price ? errores.price.msg: null ) %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-10">
            
             <!--<input type="text" id="" name="color" class="form-control mt-5 form-datos" placeholder="Color">-->
             
            <select name="color"  id="">
              <option selected hidden >Seleccione Color</option>
              <% colors.forEach(categoria => { %>
               <option value="<%= categoria.id %> "><%= categoria.color %> </option>
              <% }) %>
            </select>
           
            
            <span  id="priceError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.price ? errores.price.msg: null ) %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-10">
            
            <select name="category"  id="">
              <option selected hidden >Seleccione la categoria</option>
              <% categorias.forEach(categoria => { %>
               <option value="<%= categoria.id %> "><%= categoria.category %> </option>
              <% }) %>
            </select>
           
           
          </div>
        </div>
        <div class="row">
          <div class="col-10">
            
            <!--<input type="number" id="inputDiscount" name="discount" placeholder="Agregue su oferta" class="form-control mt-5 form-datos">-->
             
            <select name="discount"  id="">
              <option selected hidden >Seleccione descuento</option>
              <% descuentos.forEach(categoria => { %>
               <option value="<%= categoria.id %> "><%= categoria.discount %> </option>
              <% }) %>
            </select>
           
            
            <span id="discountError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.make ? errores.make.msg: null ) %></span>

          </div>
        </div>
        <div class="row">
          <div class="col-10">
                       
            <input type="text" name="description" id="description" class="form-control mt-5 form-datos" placeholder="Description">
            
            <span id="descriptionError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.description ? errores.description.msg: null ) %></span>
          </div>
        </div>

        <div class="row">
          <div class="col-10">
            <label name="imgagen" class="mt-5">Imagen de Producto</label>
            <input class="form-control form-control-lg Imagen" id="formFileLg" type="file"  name="Image">
           
            <span  id="formFileLgError" class="text-danger text-center"><%=(typeof errores != 'undefined' && errores.image ? errores.image.msg: null ) %></span>
          </div>
        </div>
        <br>
        <button class="button" type="submit">Publicar</button>
        
      </form>
    </div>
  <%- include('../partials/footer.ejs')%> 
  <script src="/javascripts/producto.js"></script>
  <script src="http://momentjs.com/downloads/moment.min.js"></script>
</body>
</html>