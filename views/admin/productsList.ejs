<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head')%>

  <body>
    <%- include('../partials/header')%>

      <main>
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Lista de productos</h2>
            </div>
            

            <% producto.forEach(producto => { %>
              <div class="a col-11 col-md-6 col-lg-3">
                <section class="product-box">
                   <img src="/images/imgProduct/<%-producto.image %>" alt="bicicleta" class="img-fluid">
              
                  <article>
                    <h3>$<%- producto.price%></h3>
                    
                    <i class="fas fa-truck"></i>
                  </article>
                  <div class="detalle">
                    <p><%-producto.name + ' ' + producto.make%></p>
                  </div>
                </section>
               <div class="product-box">
                <div class="m-2 justify-content-around">
                  <a href="/admin/editar/<%= producto.id %>" class="btn btn-sm btn-success"><i class= "fas fa-edit"></i></a>
                  <form action="/admin/eliminar/<%= producto.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>
                  </form>
                </div>
              </div>
              </div>
             
            <% }) %>
            
          </div>
        </div>
     
        
      </main>
      <%- include('../partials/footer') %>

  </body>
  </html>